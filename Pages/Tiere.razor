@page "/tiere"
@using DevExpress.Blazor

<PageTitle>Kahu Tiernothilfe - Tiere</PageTitle>

<DxContainer>
    <DxRow>
        <DxCol Size="12">
            <h1>Unsere Tiere</h1>
            <p class="lead">
                Hier finden Sie unsere Schützlinge, die ein neues Zuhause suchen.
            </p>
        </DxCol>
    </DxRow>

    <DxRow>
        <DxCol Size="4">
            <DxCard>
                <DxCardImage Src="images/placeholder.jpg" Alt="Tier 1" />
                <DxCardBody>
                    <DxCardTitle>Max</DxCardTitle>
                    <DxCardText>
                        Max ist ein freundlicher Hund, der gerne spielt und sich über Aufmerksamkeit freut.
                        Er sucht ein liebevolles Zuhause mit Garten.
                    </DxCardText>
                    <DxButton Text="Mehr erfahren" Click="@(() => NavigateToDetails("max"))" />
                </DxCardBody>
            </DxCard>
        </DxCol>
        <DxCol Size="4">
            <DxCard>
                <DxCardImage Src="images/placeholder.jpg" Alt="Tier 2" />
                <DxCardBody>
                    <DxCardTitle>Luna</DxCardTitle>
                    <DxCardText>
                        Luna ist eine verspielte Katze, die gerne kuschelt und sich über Spielzeug freut.
                        Sie sucht ein ruhiges Zuhause.
                    </DxCardText>
                    <DxButton Text="Mehr erfahren" Click="@(() => NavigateToDetails("luna"))" />
                </DxCardBody>
            </DxCard>
        </DxCol>
        <DxCol Size="4">
            <DxCard>
                <DxCardImage Src="images/placeholder.jpg" Alt="Tier 3" />
                <DxCardBody>
                    <DxCardTitle>Balu</DxCardTitle>
                    <DxCardText>
                        Balu ist ein aktiver Hund, der gerne spazieren geht und sich über Gesellschaft freut.
                        Er sucht ein aktives Zuhause.
                    </DxCardText>
                    <DxButton Text="Mehr erfahren" Click="@(() => NavigateToDetails("balu"))" />
                </DxCardBody>
            </DxCard>
        </DxCol>
    </DxRow>
</DxContainer>

